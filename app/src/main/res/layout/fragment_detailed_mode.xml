<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    tools:context="com.ve.irrigation.irrigation.DetailedModeFragment">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <com.ve.irrigation.customview.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Water Actual"
            android:textColor="@color/textcolor"
            android:textStyle="bold" />


        <com.ve.irrigation.customview.CustomTextView
            android:id="@+id/text_detail_actual"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/waterroundedcorner_bg_layout"
            android:gravity="center"
            android:padding="2dp"
            android:text=""
            android:textColor="@color/headertextcolor"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/np_detailed_actual"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone"></NumberPicker>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.ve.irrigation.customview.CustomTextViewBold
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Water Target"
            android:textColor="@color/textcolor"
            android:textStyle="bold" />


        <com.ve.irrigation.customview.CustomTextView
            android:id="@+id/text_detail_target"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/waterroundedcorner_bg_layout"
            android:drawableRight="@mipmap/drop_down_arrow"
            android:gravity="center"
            android:padding="2dp"
            android:text=""
            android:textColor="@color/headertextcolor"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/np_detailed_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone"></NumberPicker>


    </LinearLayout>


    <Button
        android:id="@+id/btn_detailed_startstop"
        android:layout_width="120dp"
        android:layout_height="@dimen/edittext_height"
        android:layout_marginTop="@dimen/margin_layout"
        android:background="@android:color/holo_red_light"
        android:text="Start"
        android:visibility="gone" />

</LinearLayout>
